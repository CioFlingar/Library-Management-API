{
  "info": {
    "name": "Library Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/register/", "host": ["{{base_url}}"], "path": ["api","register"] },
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"user1\", \"email\": \"user1@example.com\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/login/", "host": ["{{base_url}}"], "path": ["api","login"] },
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"user1\", \"password\": \"password123\"}"
        }
      }
    },
    {
      "name": "List Authors",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/authors/", "host": ["{{base_url}}"], "path": ["api","authors"] }
      }
    },
    {
      "name": "Create Author",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/authors/", "host": ["{{base_url}}"], "path": ["api","authors"] },
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Author Name\", \"bio\": \"Author bio here.\"}"
        }
      }
    },
    {
      "name": "List Categories",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/categories/", "host": ["{{base_url}}"], "path": ["api","categories"] }
      }
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/categories/", "host": ["{{base_url}}"], "path": ["api","categories"] },
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Category Name\"}"
        }
      }
    },
    {
      "name": "List Books",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/books/", "host": ["{{base_url}}"], "path": ["api","books"] }
      }
    },
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/books/", "host": ["{{base_url}}"], "path": ["api","books"] },
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Book Title\", \"description\": \"Description\", \"author_id\": 1, \"category_id\": 1, \"total_copies\": 5, \"available_copies\": 5}"
        }
      }
    },
    {
      "name": "Borrow Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/borrow/", "host": ["{{base_url}}"], "path": ["api","borrow"] },
        "body": {
          "mode": "raw",
          "raw": "{\"book_id\": 1}"
        }
      }
    },
    {
      "name": "Return Book",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/api/return/", "host": ["{{base_url}}"], "path": ["api","return"] },
        "body": {
          "mode": "raw",
          "raw": "{\"borrow_id\": 1}"
        }
      }
    },
    {
      "name": "Get Penalty Points",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "{{base_url}}/api/users/1/penalties/", "host": ["{{base_url}}"], "path": ["api","users","1","penalties"] }
      }
    }
  ]
}
